{
  "manifest_version": 3,
  "name": "SyncSignature",
  "version": "1.0.0",
  "description": "Design, update, and install email signatures automatically for everyone on your team",
  "action": {
    "default_popup": "index.html"    
  },
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://localhost:3000/*",
    "http://localhost:4000/*",
    "https://app.syncsignature.com/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "options_page" : "src/optionsPage/optionsPage.html",
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*", 
        "http://localhost:3000/*", 
        "https://app.syncsignature.com/*"
      ],
      "js": ["src/content/index.ts"]
    }
  ]
}